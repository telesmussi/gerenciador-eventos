<table>
	<tr width="100%"><td width="90%">
		<font size='4'><b><%= abbreviate_if_needed @credential.participant.name %></b></font></br>
		<font size='5'><%= 
if @credential.participant.company
if @credential.participant.company.fantasy_name && @credential.participant.company.fantasy_name.length > 0 
@credential.participant.company.fantasy_name
else
@credential.participant.company.name
end
end %></font>
		</td>
		<td align="right">
			<div id="bar_code"></div><br/>
		</td>
	</tr>
</table>
	<br/>
	<%= button_to_function "Imprimir", "javascript:print()", :class => "botao" %>

<style media="print">
.botao {
	display: none;
}
</style>

<script type="text/javascript" src="/javascript/jquery-1.3.2.js"></script>    
<script type="text/javascript" src="/javascript/jquery-barcode-2.0.2.js"></script>
<script type="text/javascript">
$(function(){
$("#bar_code").barcode("<%= @credential.bar_code %>", "code39");
});

</script>
