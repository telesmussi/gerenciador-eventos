<h1>Listing payments</h1>

<table>
  <tr>
    <th>Credential</th>
    <th>Method</th>
    <th>Amount</th>
    <th>User</th>
    <th>Observation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.credential %></td>
    <td><%= payment.method %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.user %></td>
    <td><%= payment.observation %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

